<form action="/import" method="post" enctype="multipart/form-data">
	<legend>Importar desde archivo YAML</legend>

	<div class="mb-3">
		<label for="file" class="form-label">Elegir archivo</label>
		<input
			type="file"
			id="file"
			name="file"
			class="form-control"
			accept=".yaml"
			required
		/>
	</div>

	<div class="d-flex justify-content-end">
		<button type="submit" class="btn btn-primary">Subir</button>
	</div>
</form>
